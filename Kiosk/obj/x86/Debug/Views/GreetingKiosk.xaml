<Page x:ConnectionId='1'
    x:Class="IntelligentKioskSample.Views.GreetingKiosk"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntelligentKioskSample.Views"
    xmlns:ctl="using:IntelligentKioskSample.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                   
    mc:Ignorable="d"
    x:Name="page">

    <Grid x:ConnectionId='2' x:Name="MainGrid" 
            EntranceNavigationTransitionInfo.IsTargetElement="True" >

        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*" />
            <RowDefinition Height="0.10*" />
            <RowDefinition Height="0.05*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid x:ConnectionId='3' x:Name="cameraHostGrid" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.RowSpan="3" Margin="5" >
            <ctl:CameraControl x:ConnectionId='7' x:Name="cameraControl" />
        </Grid>

        <Grid Grid.RowSpan="4" >

            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Opacity="0.8" Grid.Row="1" >
                <Viewbox Width="100" Height="100" HorizontalAlignment="Center">
                    <SymbolIcon x:ConnectionId='6' Symbol="Contact" x:Name="greetingSymbol" />
                </Viewbox>
                <TextBlock x:ConnectionId='5' x:Name="greetingTextBlock" HorizontalAlignment="Center" Margin="0,24,0,0" Text="Por favor, posicione-se na frente da câmera para iniciarmos"  Style="{StaticResource HeaderTextBlockStyle}" FontFamily="Segoe UI Light" FontStyle="Italic"  />
            </StackPanel>

            <Button  HorizontalAlignment="Center" Content="Learn more" Grid.Row="2" Opacity="0.5">
                <Button.Flyout>
                    <Flyout>
                        <TextBlock Width="400" TextWrapping="WrapWholeWords" Text="Esta demonstração é um exemplo de um fluxo de trabalho mãos-livres e em tempo real para identificar quando uma pessoa na frente da câmera corresponde a uma face conhecida.&#x0a; &#x0a;Este recurso poderia ser utilizado, por exemplo, como um simples mecanismo de log-in, para cumprimentar as pessoas pelo nome e posteriormente, apresentá-las à algumas informações personalizadas, como fotos, clima, notícias, etc."/>
                    </Flyout>
                </Button.Flyout>
            </Button>


        </Grid>
        
        <TextBlock x:ConnectionId='4' Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" x:Name="faceLantencyDebugText" Opacity="0.5" />

    </Grid>
</Page>

